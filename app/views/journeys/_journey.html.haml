%p
%li{ id: ['journey', journey.id]}
  %h5
    .journey-title{ id: ['title', journey.id]}
      = journey.title
  %h6
    .journey-description{ id: ['description', journey.id]}
      = journey.description
  %p
  %ul{ class: "journey-#{journey.id}-items"}
    - journey.items.each do |item|
      .col.s12.m7
        %li.item.card{ id: ['item', item.id]}
          .card-image
            %img{:src => "sample-image.jpg", :alt => ""}
          .card-content
            .card-title.grey-text.text-darken-4
              = item.description + " in " 
              = item.address
          %p
          .card-links
          = link_to "Edit", edit_item_path(item.id), remote: true
          = link_to "Delete", item_path(item.id), method: :delete, remote: :true
          = link_to "View Rentals", view_rentals_properties_path(:item_id => item.id), remote: true
    %p
  .waves-effect.waves-light.btn.modal-trigger.add-item{ id: ['add-item-journey-id', journey.id]}
    = link_to "Add New Todo Item", new_item_path(:journey_id => journey.id), remote: :true
